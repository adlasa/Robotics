
public class mathTest {

	public static void main(String[] args) {
		double y;
		double x;
		double m;
		double xa;
		double ya;
		double angle;
		double adjustAngle = Math.PI / 4;

		
			y = right.getRawAxis(1);
			x = right.getRawAxis(0);
			m = Math.sqrt(x * x + y * y);
			angle = Math.asin(y / m);
			if (sgn(x) == 1) {
				angle = angle;

			} else if (sgn(x)==-1) {
				angle = -angle;
			}
			angle-=adjustAngle;
			xa=m*Math.cos(adjustAngle);
			ya=m*Math.sin(adjustAngle);
		

	}

}
